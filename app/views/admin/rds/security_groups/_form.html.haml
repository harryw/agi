= simple_form_for [:admin, @security_group] do |form|
  %table
    -if @security_group.errors.any?
      %tr
        %td
        #errorExplanation
        %h2= "#{pluralize(@security_group.errors.count, "error")} prohibited this #{RdsSecurityGroup.name.titleize} from being saved:"
        %ul
          - @security_group.errors.full_messages.each do |msg|
            %li= msg  
    
    %tr.trstripeshow
      %td= form.input :id, :label => "Name", :label_html => { :class => 'label_class' }
    %tr.trstripeshow
      %td= form.input :description, :label => "Description", :label_html => { :class => 'label_class' }
   
    %tr.trstripeshow
      %td.tblshowbold
        .actions
          = form.button :submit
