
%p
  %b Name:
  = @app.name
%p
  %b Description:
  = @app.description
%p
  %b Stage name:
  = @app.stage_name
%p
  %b Customer name:
  = link_to @app.customer_name, @app.customer
%p
  %b Project name:
  = link_to @app.project_name, @app.project
%p
  %b Database Name:
  = link_to_if @app.database, @app.database.try(:name), @app.database
%p
  %b EC2 Security Group Authorized in RDS:
  = @app.ec2_sg_to_authorize
%p
  %b Deploy to:
  = @app.deploy_to
%p
  %b Deploy user:
  = @app.deploy_user
%p
  %b Deploy group:
  = @app.deploy_group
%p
  %b Multi tenant:
  = @app.multi_tenant
%p
  %b Uses bundler:
  = @app.uses_bundler
%p
  %b Alert emails:
  = @app.alert_emails
%p
  %b Url:
  = @app.url
%p
  %b Git branch:
  = @app.git_branch
%p
  %b Git revision:
  = @app.git_revision
%p
  %b Project platform:
  = @app.project_platform
%p
  %b Rails env:
  = @app.rails_env
%p
  %b Addons:
  %table
    %tr
      %th Addon Name
      %th Effective Conf
      %th App configuration
      %th 
    - @app.extensions.each do |extension|
      %tr
        %td= link_to extension.addon.name, extension.addon
        %td
          %table
            - @effective_configuration[extension.addon.name].each do |k,v|
              %tr
                %td= k
                %td= v
        %td
          %table
            - extension.customizations.each do |customization|
              %tr
                %td= link_to customization.name, [extension, customization]
                %td= customization.value
                %td= link_to 'Edit', [:edit, extension, customization]
                %td= link_to 'Destroy', [extension, customization], :confirm => 'Are you sure?', :method => :delete
          %p{:style=>"text-align:right"}= link_to 'New Local Customization', [:new, extension, :customization]
              
%p
  %b Timestamp in the Databag (Last deployment):
  = @app.databag_item_timestamp
%p
  %b Deployments
  = link_to 'Deployments', app_deployments_path(@app)



#deployment_status= @deployment_status 

= link_to 'Deploy', new_app_deployment_path(@app)

= link_to 'Edit', edit_app_path(@app)
\|
= link_to 'Destroy', @app, :confirm => 'Are you sure?', :method => :delete
\|
= link_to 'New Customization', [:new, @app, :customization]
\|
= link_to 'Customizations', [@app, :customizations]

