%p#notice= notice

%p
  %b Name:
  = @database.name
%p
  %b State:
  = @database.state
%p
  %b Db name:
  = @database.db_name
%p
  %b Username:
  = @database.master_username
%p
  %b Hostname:
  = @database.endpoint.attributes["Address"]
%p
  %b Type:
  = @database.engine
%p
  %b Instance class:
  = @database.flavor_id
%p
  %b Instance storage:
  = @database.allocated_storage
%p
  %b Multi az:
  = @database.multi_az
%p
  %b Availability zone:
  = @database.availability_zone
%p
  %b Engine version:
  = @database.engine_version
%p
  %b Pending Modified Values Hash:
  = @database.pending_modified_values.attributes

= link_to 'Edit', edit_database_path(@database)
\|
= link_to 'Destroy', @database, :confirm => 'Are you sure?', :method => :delete

