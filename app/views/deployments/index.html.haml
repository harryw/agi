%h1 Listing deployments

%table
  %tr
    %th User link
    %th Git repo
    %th Git commit
    %th Description
    %th Send email
    %th Task
    %th Do migrations
    %th Migration command
    %th Result log
    %th App
    %th Started at
    %th Completed at
    %th
    %th
    %th

  - @deployments.each do |deployment|
    %tr
      %td= deployment.user_link
      %td= deployment.git_repo
      %td= deployment.git_commit
      %td= deployment.description
      %td= deployment.send_email
      %td= deployment.task
      %td= deployment.do_migrations
      %td= deployment.migration_command
      %td= deployment.result_log
      %td= deployment.app_id
      %td= deployment.started_at
      %td= deployment.completed_at
      %td= link_to 'Show', deployment
      %td= link_to 'Edit', edit_deployment_path(deployment)
      %td= link_to 'Destroy', deployment, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Deployment', new_deployment_path
