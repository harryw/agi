
%div#maindiv

%fieldset.fieldset/

%legend.legend Change Your Password

%table{:bgcolor => "#f5f5f", :width => "100%", :cellpaddng => "4", :cellspacing => "1", :border => "0"}
  %tr
    %td
      = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |form|
      #form.error_notification
      = form.input :reset_password_token, :as => :hidden
      = form.full_error :reset_password_token

        %table
          %tr
            %td * New Password
            %td= form.input :password, :required => true,  :label => false
          %tr
            %td * Confirm Your New Password
            %td= form.input :password_confirmation, :required => true,  :label => false
          
          %tr
            %td{:colspan => "2"}
              .actions
                = form.button :submit, "Change my password"

=render :partial => "devise/shared/links"
