
%div#maindiv


%fieldset.fieldset/

%legend.legend Forgot Your Password?

%table{:bgcolor => "#f5f5f", :width => "100%", :cellpaddng => "4", :cellspacing => "1", :border => "0"}
  %tr
    %td
      = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |form|
        %table
          %tr
            %td * Email
            %td= form.input :email, :label => false, :required => false
          
          %tr
            %td{:colspan => "2"}
              .actions
                = form.button :submit, "Send me reset password instructions"

=render :partial => "devise/shared/links"
