
%div#maindiv


%fieldset.fieldset/

%legend.legend Sign Up

%table{:bgcolor => "#f5f5f", :width => "100%", :cellpaddng => "4", :cellspacing => "1", :border => "0"}
  %tr
    %td
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form|
        %table
          %tr
            %td * Email
            %td= form.input :email, :label => false, :required => false, :autofocus => true
          %tr
            %td * Password
            %td= form.input :password, :required => true,  :label => false
          %tr
            %td * Password Confirmation
            %td= form.input :password_confirmation, :required => true,  :label => false
          
          %tr
            %td{:colspan => "2"}
              .actions
                = form.button :submit, "Sign in"

=render :partial => "devise/shared/links"
